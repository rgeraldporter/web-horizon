    "lint": "./node_modules/eslint/bin/eslint.js src/*"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "caniuse-api": "^1.5.2",
    "mailgun-js": "^0.7.15",
    "node-cron": "^1.1.2",
    "ramda": "^0.22.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "cross-env": "^3.1.3",
    "eslint": "^3.12.2",
    "jasmine": "^2.5.2"
  }
