{
  "name": "web-horizon",
  "version": "1.0.0",
  "description": "Sends you an email when a new browser version comes out.",
  "main": "index.js",
  "author": "Rob Porter <rob@weeverapps.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel --presets es2015 src -d dist",
    "start": "node dist/index.js",
    "test": "npm run lint & npm run unit",
